<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.rbtgames.boardgame.feature.home.games.gameDetail.list.PlayerViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginTop="@dimen/content_padding"
        android:foreground="?attr/selectableItemBackground"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:color="@{viewModel.player.color}"
        app:contentPadding="@dimen/content_padding"
        tools:cardBackgroundColor="@color/brand">

        <TextView
            android:id="@+id/player_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/content_padding"
            android:layout_marginEnd="@dimen/content_padding"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{viewModel.title}"
            android:textColor="@color/black"
            tools:text="Player name and points" />

    </androidx.cardview.widget.CardView>

</layout>